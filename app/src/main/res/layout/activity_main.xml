<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/gridLayout1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="StoneClick"
            android:tag="s0"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone2"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="StoneClick"
            android:tag="s1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone3"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="StoneClick"
            android:tag="s2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone4"
            android:layout_row="0"
            android:layout_column="3"
            android:onClick="StoneClick"
            android:tag="s3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone5"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="StoneClick"
            android:tag="s4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone6"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="StoneClick"
            android:tag="s5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone7"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="StoneClick"
            android:tag="s6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone8"
            android:layout_row="1"
            android:layout_column="3"
            android:onClick="StoneClick"
            android:tag="s7" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone9"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="StoneClick"
            android:tag="s8" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone10"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="StoneClick"
            android:tag="s9" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone11"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="StoneClick"
            android:tag="s10" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone12"
            android:layout_row="2"
            android:layout_column="3"
            android:onClick="StoneClick"
            android:tag="s11" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone13"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="StoneClick"
            android:tag="s12" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone14"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="StoneClick"
            android:tag="s13" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone15"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="StoneClick"
            android:tag="s14" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stone16"
            android:layout_row="3"
            android:layout_column="3"
            android:onClick="StoneClick"
            android:tag="s15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/textView1"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_regenerate"
            android:id="@+id/butRegenerate"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:onClick="StonesRegenerate" />
    </GridLayout>

</RelativeLayout>
